{
  "name": "contextio",
  "displayName": "contextio",
  "description": "Easily manage and export file contexts for LLMs.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "contextio.exportContext",
        "title": "Export context",
        "category": "contextio"
      },
      {
        "command": "contextio.addOpenFiles",
        "title": "Add All Open Files",
        "category": "contextio"
      },
      {
        "command": "contextio.clearContext",
        "title": "Clear Context",
        "category": "contextio"
      },
      {
        "command": "contextio.addFile",
        "title": "Add File to Context",
        "category": "contextio"
      },
      {
        "command": "contextio.removeFile",
        "title": "Remove File from Context",
        "category": "contextio"
      },
      {
        "command": "contextio.addDroppedFiles",
        "title": "Add Dropped Files",
        "category": "contextio"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "contextio-sidebar",
          "title": "contextio",
          "icon": "$(quote)"
        }
      ]
    },
    "views": {
      "contextio-sidebar": [
        {
          "type": "webview",
          "id": "contextio.view",
          "name": "",
          "icon": "$(quote)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "glob": "^10.3.10",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.38",
    "@vscode/webview-ui-toolkit": "^1.4.0"
  }
}
